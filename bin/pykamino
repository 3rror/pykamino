#!/usr/bin/env python
import argparse

parser = argparse.ArgumentParser()
subparsers = parser.add_subparsers()

scra_parser = subparsers.add_parser('scraper', help='Fetch data from various services')
scra_subparsers = scra_parser.add_subparsers()
scra_run_parser = scra_subparsers.add_parser('run', help='Run the daemon')
scra_status_parser = scra_subparsers.add_parser('status', help='Show information about the daemon')
scra_stop_parser = scra_subparsers.add_parser('stop', help='Stop the daemon')

feat_parser = subparsers.add_parser('features', help='Calculate features from the downloaded data')
pred_parser = subparsers.add_parser('predictor', help='Use the features to predict the market')

parser.parse_args()
